<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiComm_IssuePopup4.Indicator"  CanBeDismissedByTappingOutsideOfPopup="False" Color="Transparent">
    <AbsoluteLayout InputTransparent="True">
        <Frame AbsoluteLayout.LayoutFlags="PositionProportional"
           AbsoluteLayout.LayoutBounds="0.5,0.5,AutoSize,AutoSize" Padding="0" CornerRadius="10" HasShadow="False">
            <Frame BorderColor="LightGray" CornerRadius="10" BackgroundColor="White" Padding="10,10,10,10" HasShadow="False" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="150">
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                    <Grid WidthRequest="80" HeightRequest="80">
                        <Label x:Name="lblNumber" FontSize="30" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"  />
                    </Grid>                    
                    <Label x:Name="lblIndicator" Text="Loading..." IsVisible="True" HorizontalTextAlignment="Center" />
                </StackLayout>
            </Frame>
        </Frame>
    </AbsoluteLayout>


</toolkit:Popup>